            <h1 class="event-title">Joined Events</h1>
        </div>
        <div class="grid">
            <div class="container event-grid-container">
                <div class="row">
                    {{> myEventsCard}}
                </div>
            </div>
        </div>
        {{!-- expanded card modal --}}
    <div class="modal fade" id="expanded-Modal" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id='expanded-modal-close-button'>X</button>
        </div>
        <div class="modal-body" id="modal-bc">
            {{> expandedCard}}
        </div>
        </div>
        </div>
    </div>
    </div>
