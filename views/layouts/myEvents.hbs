    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid" id="navBc">
            <a class="navbar-brand" id="logo" href="#">Eventory</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link active" id="myEvents" aria-current="page" href="#">My Events</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="searchEvents" href="#">Search Events</a>
                </li>
                <li>
                    <a href="#" class="login-register-small"> Logout</a>
                </li>
            </ul>
            </div>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="#" class="login-register"> good</a></li>
              </ul>
        </div>
    </nav>
        <!-- hero -->
        <div class="hero">
            <div class="hero-text-container">
            <h1 class="hero-text">Meet new People.</h1>
            <h1 class="hero-text">Find new places.</h1>
            <h1 class="hero-text">Create new memories.</h1>
            </div>
            <button id="large-create-btn">Create Event</button>
        </div>
        <!-- All events title -->
        <div class="event-title-container">
            <h1 class="event-title">Created Events</h1>
        </div>
        <!-- Event grid -->
        <div class="grid">
        <div class="container event-grid-container">
            <div class="row">

        </div>
    </div>
